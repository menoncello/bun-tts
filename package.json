{
  "name": "bun-tts",
  "version": "0.1.0",
  "description": "Professional CLI tool for creating audiobooks from text documents using offline TTS engines",
  "license": "MIT",
  "packageManager": "bun@1.3.1",
  "author": {
    "name": "Eduardo Menoncello",
    "email": "eduardo@example.com"
  },
  "homepage": "https://github.com/eduardomenoncello/bun-tts#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/eduardomenoncello/bun-tts.git"
  },
  "bugs": {
    "url": "https://github.com/eduardomenoncello/bun-tts/issues"
  },
  "keywords": [
    "audiobook",
    "tts",
    "text-to-speech",
    "cli",
    "offline",
    "audiobook-creation",
    "document-processing",
    "voice-synthesis",
    "markdown",
    "pdf",
    "epub"
  ],
  "bin": {
    "bun-tts": "dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun build src/cli/index.tsx --outfile dist/cli.js --target node --minify",
    "build:dev": "bun build src/cli/index.tsx --outfile dist/cli.js --target node",
    "dev": "bun --watch src/cli/index.tsx",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build && bun run test",
    "prepack": "bun run build",
    "postinstall": "echo ' bun-tts installed successfully! Run \"bun-tts --help\" to get started.'",
    "start": "bun run dist/cli.js",
    "version": "bun run build",
    "quality:gates": "bun run scripts/quality-gates-validator.ts",
    "quality:check": "bun run quality:gates",
    "quality:enforce": "bun run quality:gates || (echo 'ðŸš¨ QUALITY GATES FAILED - FIX ISSUES BEFORE PROCEEDING' && exit 1)",
    "precommit:quality": "bun run quality:gates && bun run lint:fix && bun run format",
    "complexity:check": "echo 'Complexity checking integrated into eslint rules'",
    "security:check": "bun audit",
    "pre-story-complete": "bun run quality:gates",
    "pre-epic-complete": "bun run quality:gates",
    "lint": "bunx @biomejs/biome lint .",
    "lint:fix": "bunx @biomejs/biome lint . --write",
    "lint:fix:unsafe": "bunx @biomejs/biome lint . --write --unsafe",
    "check": "bunx @biomejs/biome check .",
    "check:fix": "bunx @biomejs/biome check . --write",
    "check:fix:unsafe": "bunx @biomejs/biome check . --write --unsafe",
    "eslint": "bunx eslint .",
    "eslint:fix": "bunx eslint . --fix",
    "format": "bunx @biomejs/biome format . --write",
    "format:check": "bunx @biomejs/biome format .",
    "typecheck": "tsc --noEmit --skipLibCheck --strict false --noImplicitReturns false --noImplicitThis false --noUnusedLocals false --noUnusedParameters false",
    "typecheck:strict": "tsc --noEmit",
    "test:mutation": "bunx stryker run",
    "validate": "bun run check:fix && bun run test",
    "quality": "bun run check:fix --reporter=summary && bun lint:fix --reporter=summary && bun run test:coverage && bun run test:mutation",
    "quality:fast": "bun run check:fix && bun run test",
    "pre-commit": "bun run check:fix && bun run test:unit && bun run test:integration"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@faker-js/faker": "^10.1.0",
    "@smoores/epub": "0.1.9",
    "@types/bun": "^1.3.1",
    "awilix": "^12.0.5",
    "cosmiconfig": "^9.0.0",
    "edge-tts-universal": "^1.3.2",
    "ink": "^6.4.0",
    "marked": "^16.4.1",
    "meow": "^14.0.0",
    "pino": "^10.1.0",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@eslint/js": "^9.38.0",
    "@stryker-mutator/core": "^9.2.0",
    "@stryker-mutator/typescript-checker": "^9.2.0",
    "@types/node": "24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.9",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.4.0",
    "ink-testing-library": "4.0.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "react-devtools-core": "7.0.1",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
