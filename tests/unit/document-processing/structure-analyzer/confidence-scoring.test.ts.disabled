      success: true,
      data: {
        metadata: { title: 'Threshold Test', wordCount: 20, totalWordCount: 20, totalChapters: 2, totalParagraphs: 2, totalSentences: 4, estimatedTotalDuration: 12, confidence: 0.7, processingMetrics: { startTime: Date.now(), endTime: Date.now() + 100, processingTime: 100, nodesProcessed: 2 }, customMetadata: {} },
